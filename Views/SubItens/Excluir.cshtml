@model EPT.Models.SubItens

@{
    ViewData["Title"] = "Excluir";
}

<h3>Confirmar exclusão deste subitem? </h3>
<div>
 
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubItem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubItem)
        </dd>
       
    </dl>

    <input type="hidden" name="ItensId" value="@Model.ItensId" />

    <form asp-action="Excluir">
        <input asp-route-subitemId="@Model.SubItensId" type="submit" value="Confirmar" class="btn btn-success" /> |
        <a href="@Url.Action("Index","SubItens", new{itemId=@Model.ItensId})" class="btn btn-danger">Voltar</a>

    </form>
</div>
