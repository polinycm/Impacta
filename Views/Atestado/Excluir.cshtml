@model EPT.Models.Atestado

@{
    ViewData["Title"] = "Excluir";
}

<div class="col-12">
    <nav class="navbar navbar-expand-lg">
        <button type="button" id="sidebarCollapse" class="btn btn-info">
            <i class="fas fa-align-left"></i>
        </button>
    </nav>
</div>

<br />

<div class="alterar">
    <h3>Confirmar exclusão desta atestado? </h3>
</div>

<div class="alterar">
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID Atestado        
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AtestadoId)
        </dd>
        <dt class = "col-sm-2">
            Data Inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dt_inicio)
        </dd>
        <dt class = "col-sm-2">
            Data Fim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dt_fim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valor)
        </dt>
        <dd class = "col-sm-10">
            @{
            string formattedValor = string.Format("{0:C}", Model.valor);
            }
            @Html.DisplayFor(model => formattedValor)

        </dd>
        <dt class="col-sm-2">
            Contratante
       </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contratante.contratante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.objeto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.objeto)
        </dd>

        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
    </dl>
    <br />
    <form asp-action="Excluir">
        <input asp-route-idatestado="@Model.AtestadoId" type="submit" value="Confirmar" class="btn btn-success" /> |
        <a class="btn btn-danger" asp-action="Index">Voltar</a>
    </form>
</div>
