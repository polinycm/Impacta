@model EPT.Models.AtestadoItem

@{
    ViewData["Title"] = "ExcluirItem";
}

<div class="col-12">
    <nav class="navbar navbar-expand-lg">
        <button type="button" id="sidebarCollapse" class="btn btn-info">
            <i class="fas fa-align-left"></i>
        </button>
    </nav>
</div>

<br />

<div class="alterar">
    <h3>Confirmar exclusão deste item? </h3>
</div>
<div class="alterar">
    <hr />
    <dl class="row">
        @Html.HiddenFor(model => model.AtestadoId)
        <dt class="col-sm-2">
            Item
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item)
        </dd>
        
       <dt class = "col-sm-2">
           Unidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.unidade)
        </dd>
        <dt class = "col-sm-2">
           Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.quantidade)
        </dd>
    </dl>

    <form asp-action="ExcluirItem">
        <input type="hidden" asp-for="@Model.AtestadoId" />

        <input asp-route-iditem="@Model.AtestadoItemId" type="submit" value="Confirmar" class="btn btn-success" /> |
        <a href="@Url.Action("IncluirItem", new { idatestado = Model.AtestadoId })" class="btn btn-danger">Voltar</a>


    </form>
</div>
