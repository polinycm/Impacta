@model EPT.ViewModels.AtestadoViewModel

@{
    ViewData["Title"] = "Incluir";
}

<div class="col-12">
    <nav class="navbar navbar-expand-lg">
        <button type="button" id="sidebarCollapse" class="btn btn-info">
            <i class="fas fa-align-left"></i>
        </button>
    </nav>
</div>
<br />

<form asp-action="Incluir">
    <div class="alterar">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group mb-2 col-2">
                <label asp-for="atestado.dt_inicio" class="control-label mb-2">Data Inicio</label>
                <input asp-for="atestado.dt_inicio" class="form-control" type="date" value="model.dt_inicio.ToString(" yyyy-MM-dd")" />
                <span asp-validation-for="atestado.dt_inicio" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 col-2">
                <label asp-for="atestado.dt_fim" class="control-label mb-2">Data Fim</label>
                <input asp-for="atestado.dt_fim" class="form-control" type="date" value="model.dt_fim.ToString(" yyyy-MM-dd")" />
                <span asp-validation-for="atestado.dt_fim" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 col-2">
                <label asp-for="atestado.n_atestado" class="control-label mb-2">Atestado nº</label>
                <input asp-for="atestado.n_atestado" class="form-control" type="text" />
                <span asp-validation-for="atestado.n_atestado" class="text-danger"></span>
            </div>
            <div class="form-group col-1">
                <label class="mb-2" for="itemSelect">Moeda:</label>
                <select id="itemSelect" name="SelectedMoeda" class="form-control mb-2">
                    <option value="R$">R$</option>
                    <option value="Cr$">Cr$</option>
                    <option value="Cz$">Cz$</option>

                    <option value="NCz$">NCz$</option>

                </select>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" style="border:none; background:none; padding:0; color:red">@ViewBag.ErrorMessage</div>
                }

            </div>
            <div class="form-group mb-2 col-2">
                <label asp-for="atestado.valor" class="control-label mb-2">Valor:</label>
                <input asp-for="atestado.valor" class="form-control" type="text" value="0" />
                <span asp-validation-for="atestado.valor" class="text-danger"></span>
            </div>
            
            <div class="form-group col-5">
                <label class="col-6 mb-2" for="itemSelect">Contratante:</label>
                <select id="itemSelect" name="SelectedContratanteId" class="form-control col-6" asp-for="Contratante.ContratanteId" asp-items="ViewBag.Contratante">
                    <option value="SelectedContratanteId">Selecione...</option>
                </select>

            </div>


        </div>
        <div class="form-group mb-2">
            <label asp-for="atestado.objeto" class="control-label mb-2"></label>
            <textarea asp-for="atestado.objeto" class="form-control"></textarea>
            <span asp-validation-for="atestado.objeto" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="atestado.descricao" class="control-label mb-2">Descrição</label>
            <textarea asp-for="atestado.descricao" class="form-control"></textarea>
            <span asp-validation-for="atestado.descricao" class="text-danger"></span>
        </div>
        <div class="form-group mb-2 col-6">
            <label asp-for="atestado.Link" class="control-label mb-2"></label>
            <input asp-for="atestado.Link" class="form-control" type="text" />
            <span asp-validation-for="atestado.Link" class="text-danger"></span>
        </div>



        <br />
        <div class="form-group">
            <input type="submit" value="Confirmar" class="btn btn-success" /> |
            <a href="@Url.Action("Index")" class="btn btn-danger">Voltar</a>

        </div>
    </div>
</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
