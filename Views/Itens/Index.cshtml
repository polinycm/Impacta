@model ReflectionIT.Mvc.Paging.PagingList<EPT.Models.Itens>

@{
    ViewData["Title"] = "Index";
}

<form method="get" class="row">
    <div class="row buscar">
        <div class="col-1 botao">
            <nav class="navbar navbar-expand-lg ">
                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <i class="fas fa-align-left"></i>
                </button>
            </nav>
        </div>
        <div class="col-7">
            <input name="filter" class="form-control" placeholder="Buscar item" value="@Model.RouteValue["Filter"]" />

        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>

</form>

<br />
<div >

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-1">
                    ID
@*                     @Html.DisplayNameFor(model => model.ItensId)
 *@                </th>
                <th class="col-4">
                    @Html.DisplayNameFor(model => model.Item)
                </th>
                <th ></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItensId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td class="p-0">
                        <a href="@Url.Action("Alterar", new { iditem=item.ItensId})" class="btn">
